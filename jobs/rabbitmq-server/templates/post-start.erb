create_management_user() {
<%
  username = p('rabbitmq-server.administrators.management.username')
  password = p('rabbitmq-server.administrators.management.password')
%>

 echo <%= username %> > $OPERATOR_USERNAME_FILE
 ${RABBIT_CTL} add_user <%= username %> <%= password %> >> ${STARTUP_LOG}
}

